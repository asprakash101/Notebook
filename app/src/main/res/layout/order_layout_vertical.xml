<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="175dp"
    android:layout_height="250dp"
    android:id="@+id/verticalProductCardView"
    android:layout_marginHorizontal="5dp"
    android:elevation="20dp"
    android:layout_marginVertical="5dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/sample"
                android:layout_centerHorizontal="true"
                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/verticalProgressBar"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/productNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Note Book"
            android:textSize="15sp"
            android:autoSizeMaxTextSize="15sp"
            style="@style/TextAppearance.AppCompat.Large"
            />
        <TextView
            android:id="@+id/productDesignText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productNameText"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Single Line"
            android:textSize="10sp"
            android:autoSizeMaxTextSize="10sp"

            />
        <TextView
            android:id="@+id/productPagesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productDesignText"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="100 pages IC"
            android:textSize="10sp"
            android:autoSizeMaxTextSize="10sp"
            />
        <TextView
            android:id="@+id/productPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productPagesText"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Rs. 30"
            android:textSize="15sp"
            android:autoSizeMaxTextSize="15sp"
            style="@style/TextAppearance.AppCompat.Large"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/productPriceText"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_baseline_add_shopping_cart_24"
                android:layout_margin="5dp"
                android:id="@+id/addCart"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:layout_margin="5dp"
                android:id="@+id/like"
                android:layout_gravity="center_vertical"
                />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>